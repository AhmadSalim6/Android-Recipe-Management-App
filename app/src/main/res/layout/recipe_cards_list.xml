<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipe_cards_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white">


    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btn_back_to_home"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/back_to_home"
        android:scaleType="centerInside"
        android:src="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- Category Name -->
    <TextView
        android:id="@+id/txt_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/btn_back_to_home"
        android:layout_alignTop="@id/btn_back_to_home"
        android:text="Category"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:singleLine="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recipes_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_back_to_home"/>
</RelativeLayout>
