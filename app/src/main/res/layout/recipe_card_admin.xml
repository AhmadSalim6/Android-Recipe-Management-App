<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="?attr/colorPrimaryVariant"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="269dp"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="wrap_content">

        </View>
        <ImageView
            android:id="@+id/Image_et"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:background="@drawable/search_bar_bg"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/burger1" />

        <EditText
            android:id="@+id/image_name_et"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:text="Name" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/recipe_info_bg"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Name_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lexend_semi_bold"
                android:text="Ramen"
                android:textColor="?attr/android:textColor"
                android:textSize="22dp" />


            <View
                android:layout_width="14dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/Category_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lexend_semi_bold"
                android:text="Noodles"
                android:textColor="?attr/android:textColor"
                android:textSize="20dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/Steps_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend_semi_bold"
            android:text="Ramen is a Japanese noodle soup consisting of springy wheat noodles served in a flavorful broth, often topped with sliced pork, soft-boiled eggs, green onions, and nori (seaweed). The broth can vary â€” rich and creamy tonkotsu (pork bone), salty shio, savory shoyu (soy sauce), or spicy miso."
            android:textColor="?attr/colorOnPrimary"
            android:textSize="15dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/stopwatch" />

            <EditText
                android:id="@+id/Cooking_time_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/lexend_semi_bold"
                android:text="15 min"
                android:textColor="?attr/android:textColor"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textColor="?attr/android:textColor"
            android:fontFamily="@font/lexend_semi_bold"
            android:textSize="22dp"/>

        <EditText
            android:id="@+id/Ingredients_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/lexend_semi_bold"
            android:text="Eggs\nmilk\nTortilla\nCorn"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/update_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update" />

            <View
                android:layout_width="14dp"
                android:layout_height="match_parent"/>


            <Button
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>