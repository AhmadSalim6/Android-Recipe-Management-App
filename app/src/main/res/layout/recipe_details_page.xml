<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
android:background="?attr/colorPrimaryVariant">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_back_to_category"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/back"
                    app:tint="?attr/android:textColor" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/btn_fav"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/heart"
                    app:tint="?attr/android:textColor" />

            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_item"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ionela"
                app:shapeAppearanceOverlay="@style/CircularImage" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@drawable/button_bg"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp">

            <TextView
                android:id="@+id/txt_itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lexend_semi_bold"
                android:text="Ramen"
                android:textColor="#000000"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_itemRating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"
                    android:fontFamily="@font/lexend_semi_bold"
                    android:text="4.8"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_rate1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/star_white_outline" />

                <ImageView
                    android:id="@+id/img_rate2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/star_white_outline" />

                <ImageView
                    android:id="@+id/img_rate3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/star_white_outline" />

                <ImageView
                    android:id="@+id/img_rate4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/star_white_outline" />

                <ImageView
                    android:id="@+id/img_rate5"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/star_white_outline" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="2" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/stopwatch" />

                <TextView
                    android:id="@+id/txt_itemPreparinTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_semi_bold"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lexend_semi_bold"
                android:text="Ingredients"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lexend_semi_bold"
                android:text="Eggs\nmilk\nTortilla\nCorn"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lexend_semi_bold"
                android:text="Steps"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lexend_semi_bold"
                android:text="Eggs\nmilk\nTortilla\nCorn"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>

