<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="?attr/colorPrimaryVariant"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_weight="4">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/heart"
            android:scaleType="centerInside"
            app:tint="?attr/android:textColor"
            android:layout_gravity="end"/>
        <ImageView
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:src="@drawable/ionela"
            android:background="@drawable/search_bar_bg"
            android:clipToOutline="true"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/recipe_info_bg"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:layout_weight="5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ramen"
            android:layout_marginBottom="10dp"
            android:textColor="?attr/android:textColor"
            android:fontFamily="@font/lexend_semi_bold"
            android:textSize="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Ramen is a Japanese noodle soup consisting of springy wheat noodles served in a flavorful broth, often topped with sliced pork, soft-boiled eggs, green onions, and nori (seaweed). The broth can vary â€” rich and creamy tonkotsu (pork bone), salty shio, savory shoyu (soy sauce), or spicy miso."
            android:textColor="?attr/colorOnPrimary"
            android:fontFamily="@font/lexend_semi_bold"
            android:textSize="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/star" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_semi_bold"
                android:textSize="16dp"
                android:textColor="?attr/android:textColor"
                android:layout_marginRight="25dp"
                android:text="4.8" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/fire" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_semi_bold"
                android:textSize="16dp"
                android:textColor="?attr/android:textColor"
                android:layout_marginRight="25dp"
                android:text="341 kcal" />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/stopwatch" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 min"
                android:layout_marginRight="20dp"
                android:textColor="?attr/android:textColor"
                android:fontFamily="@font/lexend_semi_bold"
                android:textSize="16dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:layout_marginBottom="10dp"
            android:textColor="?attr/android:textColor"
            android:fontFamily="@font/lexend_semi_bold"
            android:textSize="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eggs\nmilk\nTortilla\nCorn"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/lexend_semi_bold"
            android:textSize="16dp"/>

    </LinearLayout>

</LinearLayout>